import java.io.File;
import java.lang.*;

public class getFiles{
	static String[] TYPES = new String[]{"jpg", "png", "gif", "mp4", "mp3", "exe", "psd", "html", "xml"};
	
	public static void main(String args[]){
		
		File wd = new File (".");
		System.out.println(wd.getAbsolutePath());
		filePath(wd);
		
		System.out.println("Number of files by type:");
		for(int i=0;i<TYPES.length;i++)
		{
			String type=TYPES[i];
			int num = fileExt(wd, type);
			System.out.println(type + " : " + num);
		}
	}
	
	public static void filePath(File wd)
	{
		File[] path;
		path = wd.listFiles();
		for(File file:path)
		{
			if(file.isDirectory()==true){
			int num = numFileDirectory(file);
			int num2 = numFile(file);
			System.out.print(num + " ");
			System.out.println("num" + " " + num2 + " " + "d/ " + file.getAbsolutePath());
			filePath(file);
		}
		else System.out.println("0 " + "0 " + "f/ " + file.getAbsolutePath())
		}
	}
	
	public static int numFileDirectory(File f){
		int count=0;
		File[] path;
		path = f.listFiles();
		if(f.isDirectory()==true)
		{
		for(File file:path) count++;
		return count;
		}
	}
	
	public static int numFile(File f){
		int count=0;
		File[] path;
		path = f.listFiles();
		for(File file:path){
			if(file.isFile() == true) count++;
			
			else if(file.isDirectory()) count+=numFile(file);
		}
		return count;
	}
	
	public static int fileExt(File f, String type)
	{
		int count=0;
		File[] path;
		path = f.listFiles();
		
		for(File file:path)
		{
			if(file.isFile()==true)
			{
				String file2 = file.getAbsolutePath();
				String file3 = file2.toString().toLowerCase();
				if(file3.endsWith(type)==true) count++;
			}
			else if(file.isDirectory()==true) count+=fileExt(file,type);
		}
		return count;
	}
}
